<script>

function pedirTitulo() {
  const nombre = prompt("Ingresa el titulo a buscar:");
  // Verificar que se haya ingresado una categoría
  if (nombre !== null && nombre.trim() !== '') {
    // Redireccionar a la ruta con la categoría ingresada
    window.location.href = `/titulo/${encodeURIComponent(nombre)}`;
  }
}
